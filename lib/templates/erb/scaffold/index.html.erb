<div class="page-header">
  <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New <%= human_name %>
  <%% end %>
  <h1>Listing <%= plural_table_name %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
    <% attributes.each do |attribute| -%>
        <th class="text-center"><%= attribute.human_name %></th>
    <% end -%>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <tr>

    </tr>
      <%% (@<%= plural_table_name %>).each do |<%= singular_table_name %>| %>
        <tr>
          <% attributes.each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td><%%= link_to 'Показать', <%= singular_table_name %> %></td>
          <td><%%= link_to 'Редактировать', edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
          <td><%%= link_to 'Удалить', <%= singular_table_name %>, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>
