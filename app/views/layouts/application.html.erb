<!DOCTYPE html>
<html>
  <head>
    <title>OtpApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
          <div class="dropdown-menu" aria-labelledby="dropdown01">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </li>
      </ul>

      <ul class="nav navbar-nav ml-auto">
        <% if current_user.present? %>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, class: 'nav-link', method: :delete do %>
              <span class="fas fa-sign-out-alt"></span> Sign Out
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link' do %>
              <span class="fas fa-user"></span> Sign Up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link' do %>
              <span class="fas fa-sign-in-alt"></span> Login
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
  </nav>
  <br>

  <div class="container">
    <% flash.each do |type, msg| %>
      <ul class="list-group">
        <li class="alert list-group-item list-group-item-<%= "#{flash_alert_class(type)}" %>">
          <a href="#" class="close float-right" data-dismiss="alert">&#215;</a>
          <%= msg %>
        </li>
      </ul>
    <% end %>

    <%= yield %>
  </div>

  <hr>
  <footer class="container">
    <p>&copy; Company 2017-2020</p>
  </footer>
  </body>
</html>
