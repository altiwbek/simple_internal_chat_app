<div class="page-header">
  <%= link_to new_chat_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Chat
  <% end %>
  <h1>Listing chats</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <tr>

    </tr>
      <% (@chats).each do |chat| %>
        <tr>
                      <td><%= chat.title %></td>
                      <td><%= chat.description %></td>
                    <td><%= link_to 'Показать', chat %></td>
          <td><%= link_to 'Редактировать', edit_chat_path(chat) %></td>
          <td><%= link_to 'Удалить', chat, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
